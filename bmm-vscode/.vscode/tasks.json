{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "copy-files",
			"label": "copy-files"
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": ["copy-files"]
		}
	]
}
